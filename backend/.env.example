# Meta Business app credentials (from Settings → Basic)
META_APP_ID=
META_APP_SECRET=

# Redirect URI configured in the Meta app (App Dashboard → Use Cases → Customize → Client OAuth Settings)
# Must match https://<SERVER_URL>/auth/callback
META_REDIRECT_URI=

# Webhook verification token (pick any random string; reuse it in the Webhooks UI)
VERIFY_TOKEN=super-secret-webhook-token

# Public URL Meta can reach (HTTPS). Include protocol.
SERVER_URL=https://your-public-domain.example.com
